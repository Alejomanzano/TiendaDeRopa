<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaDeRopa.VentasPage"
             Title="Ventas">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Picker x:Name="pickerProducto" Title="Selecciona un producto" />
        <Entry x:Name="txtCantidad" Placeholder="Cantidad" Keyboard="Numeric" />
        <Button Text="Registrar venta" Clicked="BtnAgregar_Clicked" />
        <CollectionView x:Name="listaVentas">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="{Binding Producto}" />
                        <Label Text="{Binding Cantidad}" />
                        <Label Text="{Binding Total}" />
                        <Button Text="Eliminar" Clicked="BtnEliminar_Clicked" CommandParameter="{Binding Id}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>