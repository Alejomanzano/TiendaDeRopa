<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaDeRopa.MainPage"
             Title="Tienda de ropa">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label x:Name="lblSaludo" FontSize="20" HorizontalOptions="Center" />
            <Button Text="Productos" Clicked="BtnProductos_Clicked" />
            <Button Text="Usuarios" Clicked="BtnUsuarios_Clicked" />
            <Button Text="Ventas" Clicked="BtnVentas_Clicked" />
            <Button Text="Reportes" Clicked="BtnReportes_Clicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
