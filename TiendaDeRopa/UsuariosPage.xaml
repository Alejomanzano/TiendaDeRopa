<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaDeRopa.UsuariosPage"
             Title="Usuarios">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry x:Name="txtNombre" Placeholder="Nombre de usuario" />
        <Entry x:Name="txtPassword" Placeholder="ContraseÃ±a" IsPassword="True" />
        <Button Text="Agregar usuario" Clicked="BtnAgregar_Clicked" />
        <CollectionView x:Name="listaUsuarios">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="{Binding Nombre}" />
                        <Button Text="Eliminar" Clicked="BtnEliminar_Clicked" CommandParameter="{Binding Id}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>