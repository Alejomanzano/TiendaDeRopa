<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaDeRopa.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Iniciar Sesión" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="txtUsuario" Placeholder="Usuario" />
        <Entry x:Name="txtPassword" Placeholder="Contraseña" IsPassword="True" />
        <Button Text="Iniciar sesión" Clicked="BtnLogin_Clicked" />
    </VerticalStackLayout>
</ContentPage>